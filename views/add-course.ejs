<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AyoCoding</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
  <%- include('./components/_navbar.ejs', { isLoggedIn, userId }) %>

    <div class="container mb-5" style="margin-top: 5rem;">
      <h2>Add Course</h2>
        <form action="/courses/add" method="post">
          <div class="row">

            <% if (alert) { %>
              <div class="alert alert-secondary"><%= alert.split(',').join(', ') %></div>
            <% } %>

            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label">Title:</label>
              <input type="text" class="form-control" name="title"">
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label">Description:</label>
              <input type="text" class="form-control" name="description">
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label">Price:</label>
              <input type="number" class="form-control" name="price">
            </div>

            <!-- Thumbnail -->
            <div class="mb-3">
              <label for="thumbnail" class="form-label">Thumbnail:</label>
              <input type="text" class="form-control" name="thumbnail">
            </div>

            <!-- Category -->
            <div class="mb-3">
              <label for="CategoryId" class="form-label">Category:</label>
              <select class="form-control" name="CategoryId">
                <option selected disabled>-- Select Category --</option>
                <% category.forEach(el=> { %>
                  <option value="<%= el.id %>"><%= el.name %></option>
                  <% }) %>
              </select>
            </div>

            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
    </div>

    <!-- Bootstrap JS Bundle (Popper included) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-d7rMz4+u2m1OftOp5PjBTTwPgIBhqVxOBzHwBt7ZZsBfE1+I3q2OcvPImC2iIkJ"
      crossorigin="anonymous"></script>
</body>

</html>